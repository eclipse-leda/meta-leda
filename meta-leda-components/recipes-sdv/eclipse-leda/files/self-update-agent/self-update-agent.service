[Unit]
Description=SDV Self Update Agent
After=network.service

[Install]
WantedBy=multi-user.target

[Service]
Restart=on-failure
RestartSec=30s
ExecStart=/usr/bin/self-update-agent -p /data/selfupdates --host 127.0.0.1
